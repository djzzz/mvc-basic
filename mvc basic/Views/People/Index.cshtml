@model mvc_basic.Models.PersonViewModel
<form asp-controller="People" asp-action="Index" asp-route-id="" method="get" id="Search">
    <input name="url" type="hidden" value="@Url.Action("Search", "People")" />
    <label name="search">search</label>
    <input name="search" />
    <input type="submit" value="Save" />
</form>

<partial name="_PersonContainer" for="@Model" />


<form asp-controller="People" asp-action="Index" asp-route-id="" method="post" id="Add">
    <input name="url" type="hidden" value="@Url.Action("Index", "People")" />
    <label asp-for="@Model.createPersonView.Name">Name</label>
    <input asp-for="@Model.createPersonView.Name" />
    <label asp-for="@Model.createPersonView.Number">Phone number</label>
    <input asp-for="@Model.createPersonView.Number" />
    <label asp-for="@Model.createPersonView.City">City</label>
    <input asp-for="@Model.createPersonView.City" />
    <input type="submit" value="Save" />
</form>

<script src="~/js/AddPeople.js"></script>
<script src="~/js/DeletePerson.js"></script>
<script src="~/js/Search.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>